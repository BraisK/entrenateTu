generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int   @id   @default(autoincrement())
  name      String
  surname   String?
  email     String  @unique
  password  String
  role      String? // admin  vip   null
  active    Boolean   @default(true)
  accepNotifications Boolean @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt  
  
  train    Train[]
  rates   Rate[]
  suggestions Suggestion[]

}

model Train {
  id            Int   @id   @default(autoincrement())
  title         String
  description   String?
  active        Boolean   @default(true)
  published     DateTime @default(now()) // iso8601
  expired       DateTime  // iso8601

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt   


  idUserCreator Int
  userCreator   User  @relation(fields: [idUserCreator], references: [id])

  rates   Rate[]
}

model Suggestion {
  id            Int   @id   @default(autoincrement())
  title         String
  description   String?
  active        Boolean   @default(true)
  published     DateTime @default(now()) // iso8601
  expired       DateTime  // iso8601

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt   


  idUserCreator Int
  userCreator   User  @relation(fields: [idUserCreator], references: [id])

}
model Rate{
  idUser  Int
  idTrain Int
  value   Int  

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt   

  user  User  @relation(fields: [idUser], references: [id])
  train  Train  @relation(fields: [idTrain], references: [id])

  @@id([idUser, idTrain])
}